{
  "name": "@staticdeploy/mock-server",
  "description": "Easy to use, no frills mock server",
  "version": "1.10.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "bin": {
    "mock-server": "src/bin/index.js"
  },
  "files": [
    "src",
    "docs",
    "ssl"
  ],
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/mock-server.git"
  },
  "bugs": {
    "url": "https://github.com/staticdeploy/mock-server/issues"
  },
  "keywords": [
    "mock",
    "server",
    "api"
  ],
  "scripts": {
    "test": "env NODE_PATH=src mocha --exit --recursive test",
    "coverage": "env NODE_ENV=test nyc --reporter=text --reporter=lcov npm run test",
    "publish-coverage": "codecov",
    "prettier": "prettier '@(src|test|docs|examples)/**/*.@(js|md)'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:eslint": "eslint src test",
    "lint": "yarn lint:prettier && yarn lint:eslint"
  },
  "dependencies": {
    "@staticdeploy/app-config": "^2.0.1",
    "ajv": "^6.10.2",
    "body-parser": "^1.18.3",
    "chalk": "^3.0.0",
    "connect-slow": "^0.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "decache": "^4.5.0",
    "del": "^5.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-mung": "^0.5.1",
    "fancy-log": "^1.3.3",
    "fs-readdir-recursive": "^1.1.0",
    "lodash.debounce": "^4.0.8",
    "lodash.includes": "^4.3.0",
    "methods": "^1.1.2",
    "node-watch": "^0.6.3",
    "selfsigned": "^1.10.7",
    "watch": "^1.0.2",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "create-fs-tree": "^1.0.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^4.2.1",
    "lodash.sortby": "^4.7.0",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
